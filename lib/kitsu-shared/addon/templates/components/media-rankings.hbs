{{#if @media.popularityRank}}
  {{#link-to-kitsu "kitsu-explore.index.more" @media.modelType "most-popular" class="ranking ranking-popularity"}}
    {{svg-jar "heart-filled"}}
    {{t "kitsu-shared.media-rankings.popularity" length=length type=@media.modelType rank=@media.popularityRank}}
  {{/link-to-kitsu}}
{{/if}}

{{#if @media.ratingRank}}
  {{#link-to-kitsu "kitsu-explore.index.more" @media.modelType "highest-rated" class="ranking ranking-rating"}}
    {{svg-jar "star"}}
    {{t "kitsu-shared.media-rankings.rating" length=length type=@media.modelType rank=@media.ratingRank}}
  {{/link-to-kitsu}}
{{/if}}